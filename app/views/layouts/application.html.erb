      header.shadow {
          box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* Ajuste os valores conforme necessário */
      }
      .white-text {
          color: white;
      }
      .rounded-table {
          border-radius: 10px; /* Ajuste o valor conforme necessário */
          overflow: hidden; /* Para garantir que o conteúdo da tabela não ultrapasse as bordas arredondadas */
      }
      .contorno-texto {
          color: transparent; /* Torna o texto transparente */
