      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <!-- Contrato -->
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Contrato
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Listagem de contratos", contratos_path, class: "dropdown-item" %></li>
                <li><%= link_to "Novo contrato", new_contrato_path, class: "dropdown-item" %></li>
              </ul>
            </li>
          <% end %>
          <!-- Trabalhadores -->
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Trabalhadores
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Listagem de trabalhadores", trabalhadors_path, class: "dropdown-item" %></li>
                <li><%= link_to "Novo trabalhador", new_trabalhador_path, class: "dropdown-item" %></li>
              </ul>
            </li>
          <% end %>
          <!-- Clientes -->
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Clientes
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Listagem de clientes", clientes_path, class: "dropdown-item" %></li>
                <li><%= link_to "Novo cliente", new_cliente_path, class: "dropdown-item" %></li>
              </ul>
            </li>
          <% end %>
          <!-- Serviços -->
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Serviços
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Listagem de Serviços", servicos_path, class: "dropdown-item" %></li>
                <li><%= link_to "Novo serviço", new_servico_path, class: "dropdown-item" %></li>
              </ul>
            </li>
          <% end %>
          <!-- Roadmap -->
          <li class="nav-item">
            <%= link_to "Roadmap do projeto", sobre_path, class: "nav-link active", aria: { current: "page" } %>
          </li>
          <li class="nav-item">
            <a  class="nav-link active", style="color: darkgreen" href="#"  aria-expanded="false">
              <%= notice %>
            </a>
          </li>
          <!-- Minha conta -->
          <li class="nav-item dropdown">
            <% if user_signed_in? %>
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Minha conta
              </a>
              <ul class="dropdown-menu">
                <%= link_to "Configurações", conta_path, class: "nav-link active", aria: { current: "page" } %>
                <%= link_to "Sair", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link active", aria: { current: "page" } %>
                </ul>
            <% else %>
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Conta
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Entrar", new_user_session_path, class: "nav-link active", aria: { current: "page" } %></li>
              </ul>
            <% end %>
          </li>
        </ul>
